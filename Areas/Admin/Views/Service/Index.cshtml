@model List<Service>
<div class="col-xs-1 col-sm-1 col-md-8 col-lg-8 p-2">
	<div class="card shade h-100">
		<div class="card-body">

			<h5 class="card-title">لیست خدمات </h5>


			<hr>
			<table class="table table-striped">
				<thead>
					<tr>
						<th scope="col">ردیف</th>
						<th scope="col">نام </th>
						<th scope="col">قیمت</th>
						<th scope="col">مذت زمان</th>
						<th scope="col">دسته بندی</th>
						<th scope="col"> عکس</th>
						<th scope="col">
							<a asp-area="Admin" asp-controller="Service" asp-action="Upsert" class="btn outlined o-primary form-control  text-center">اضافه کردن</a>

						</th>

					</tr>
				</thead>
				<tbody>

					@foreach (var service in Model)
					{
						<tr>
							<th scope="row">@service.CategoryId</th>
							<td>@service.ServiceName</td>
							<td>@service.Price</td>
							<td>@service.Duration</td>
							<td>
								@if (service.Category != null)
								{
									<p>@service.Category.CategoryName</p>
								}
								else
								{
									<p>دسته‌بندی موجود نیست</p>
								}
							</td>
							<td>
								<img src="@service.ImageUrl" width="80px" height="80px"/>
							</td>

						</tr>

					}

				</tbody>
			</table>
		</div>

	</div>
</div>